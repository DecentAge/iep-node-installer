<?xml version="1.0" encoding="UTF-8" ?>
<izpack:userinput version="5.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:izpack="http://izpack.org/schema/userinput" xsi:schemaLocation="http://izpack.org/schema/userinput http://izpack.org/schema/5.0/izpack-userinput-5.0.xsd">
	
	<panel id="iep.config.panel">
		<field type="title" txt="Infinity Economics Node Config" align="left"/>

		<field type="radio" variable="target.chain" readonly="true">
			<description txt="Target chain/environment" />
			<spec>
				<choice txt="TESTNET" id="target.chain.tetsnet" value="mainnet" set="true" />
				<choice txt="MAINNET" id="target.chain.mainnet" value="testnet" />
			</spec>
		</field>


		<field type="check" variable="setup.add.lightwallet" readonly="true">
			<spec txt="Start as light wallet" id="setup.add.lightwallet" true="on" false="off" set="false" />
		</field>

		<!-- 
		<field type="check" variable="setup.download.snapshot">
			<spec txt="Download the latest snapshot of the blockchain to avoid having to sync the node" id="setup.add.lightwallet" true="on" false="off" set="false" />
		</field>

		<field type="divider" />
		-->
		<field type="space" />

		<field type="check" variable="xin.installer.startAfterInstallation" >
			<spec txt="Start XIN node after installation" true="true" false="false" set="true" />
		</field>
		
		<field type="staticText" align="left" txt="The admin password used to access restricted node funcitonalities"/>

		<field type="password" align="left" variable="xin.adminPassword" >
			<spec allowEmptyValue="false" txt="The admin password used to access restricted node funcitonalities" set="Wuff1980_s7">
				<pwd txt="The Password:" size="18" set="" />
				<pwd txt="Retype Password:" size="18" set="" />
			</spec>
			<validator class="com.izforge.izpack.panels.userinput.validator.PasswordEqualityValidator" txt="Both passwords must match." />
			<validator class="com.izforge.izpack.panels.userinput.validator.RegularExpressionValidator" txt="The admin password must begin with a character and be 8-20 mixed-case characters, numbers, and special characters [#@!$_].">
				<param name="pattern" value="^(?=[a-zA-Z])(?=.*[0-9])(?=.*[#@!$_])(?=.*[A-Z])(?=.*[a-z])(?!.*[^a-zA-Z0-9#@!$_])(?!.*\s).{8,20}$" />
			</validator>
		</field>
	</panel>
</izpack:userinput>