<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="XIN" location="startMenu"/>
	<shortcut
		name="Stop node (iep-node)"
		target="$INSTALL_PATH\bin\iep-node.exe"
		commandLine="stop"
		workingDirectory="$INSTALL_PATH"
        description="Stop node for Infinity Economics"
		iconFile="$INSTALL_PATH\html\www\wallet\assets\images\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>	
	
	<shortcut
		name="Start XIN (iep-node)"
		target="$INSTALL_PATH\bin\iep-node.exe"
		commandLine="start"
		workingDirectory="$INSTALL_PATH"
        description="Start node for Infinity Economics"
		iconFile="$INSTALL_PATH\html\www\wallet\assets\images\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>
	
		
	<shortcut
		name="Uninstall XIN (iep-node)"
		target="$INSTALL_PATH\bin\iep-node.exe"
		commandLine="uninstall"
		workingDirectory="$INSTALL_PATH"
        description="Uninstalls the node for Infinity Economics"
		iconFile="$INSTALL_PATH\html\www\wallet\assets\images\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>	 
	 
</izpack:shortcuts>