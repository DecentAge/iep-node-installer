<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <programGroup defaultName="XIN" location="applications" iconFile="$INSTALL_PATH/html/www/assets/images/logo_modal.png"/>

    <shortcut
            name="Start XIN (iep-node)"
            programGroup="yes"
            desktop="yes"
            target="$INSTALL_PATH/bin/start.sh"
            workingDirectory="$INSTALL_PATH"
            description="Start Xin"
            iconFile="$INSTALL_PATH/html/www/assets/images/logo_modal.png"
            type="Application"
            encoding="UTF-8"
            categories="Application;Network;"
            createForAll="true">
    </shortcut>

    <shortcut
            name="Stop XIN (iep-node)"
            programGroup="yes"
            desktop="yes"
            target="$INSTALL_PATH/bin/stop.sh"
            workingDirectory="$INSTALL_PATH"
            description="Shutdown Xin"
            iconFile="$INSTALL_PATH/html/www/assets/images/logo_modal.png"
            type="Application"
            encoding="UTF-8"
            categories="Application;Network;"
            createForAll="true">
    </shortcut>

    <shortcut
            name="Uninstall XIN (iep-node)"
            programGroup="yes"
            desktop="no"
            target="java"
            commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
            iconFile="$INSTALL_PATH/html/www/assets/images/delete.png"
            workingDirectory=""
            type="Application"
            encoding="UTF-8"
            categories="Application;Network;"
            createForAll="true"
            description="Uninstall Xin">
    </shortcut>


</izpack:shortcuts>
